<mvc:View
   controllerName="sap.ui.demo.Walkthrough.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <Text text="Hello World"/>
   <Input 
      value="{/recipient/name}"
      description="Hi {/recipient/name}"
      valueLiveUpdate="true"
      width="60%">
   </Input>
   
   <Button
      text="{i18n>showHelloButtonText}"
      press=".onShowHello"/>
   
</mvc:View>
